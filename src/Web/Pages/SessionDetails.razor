@page "/sessions/{Id:guid}"
@using Application.DTOs.SessionDtos
@using Web.AuthService
@inject HttpClient Http
@inject UserState UserState


@code {
    [Parameter] public Guid Id { get; set; }
    private CollabSessionDto? _session;
    private string? _error;
    private bool _initialized = false;
    private bool _isLoaded = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {

        if (!_initialized)
        {
            _initialized = true;
            await UserState.InitializeAsync();
            
            try
            {
                _session = await Http.GetFromJsonAsync<CollabSessionDto>($"/api/sessions/{Id}");
            }
            catch
            {
                _error = "Failed to load session.";
            }

            _isLoaded = true;
            StateHasChanged();

        }
    }
}

@if (_error != null)
{
    <div class="alert alert-danger">@_error</div>
}
else if (_session == null)
{
    <p>Loading...</p>
}
else
{
    <div class="card mt-4">
        <div class="card-body">
            <h2>@_session.Name</h2>
            <div><b>Owner:</b> @_session.OwnerName</div>
            <div><b>Created:</b> @_session.CreatedAt.ToString("g")</div>
            <div><b>Active:</b> @(_session.IsActive ? "Yes" : "No")</div>
            <div><b>Snippet:</b> @_session.CodeSnippetTitle</div>
            <div>
                <div>
                    <b>ExpiresAt:</b>
                    @(_session.ExpiresAt != DateTime.MinValue
                        ? _session.ExpiresAt.ToString("g")
                        : "—")
                </div>
            </div>
            @if (!string.IsNullOrWhiteSpace(_session.SnippetContent))
            {
                <pre class="bg-light rounded p-2 mt-2" style="max-width:100%; overflow-x:auto;">
                    @_session.SnippetContent
                </pre>
            }

            <h5 class="mt-4">Participants</h5>
            <ul>
                @foreach (var p in _session.Participants)
                {
                    <li>@p.Username (@p.Email) - joined @p.JoinedAt.ToString("g")</li>
                }
            </ul>

            @if (_session.EditHistories != null && _session.EditHistories.Any())
            {
                <h5 class="mt-4">Change History</h5>
                <ul>
                    @foreach (var h in _session.EditHistories)
                    {
                        <li>
                            <strong>@h.EditedByUsername</strong>
                            <span class="ms-2 text-muted">@h.EditedAt.ToLocalTime().ToString("g")</span>
                            <div class="small">@h.Changes</div>
                        </li>
                    }
                </ul>   
            }
        </div>
    </div>
}